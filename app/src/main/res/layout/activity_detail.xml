<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@id/ic_previous"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:adjustViewBounds="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_player_short_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"
        android:textColor="@color/psg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_previous"
        app:layout_constraintBottom_toBottomOf="@id/ic_previous"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Messi" />

    <ImageView
        android:id="@+id/action_share"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:adjustViewBounds="true"
        android:layout_marginEnd="24dp"
        android:src="@drawable/share"
        app:layout_constraintBottom_toBottomOf="@id/ic_previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_previous" />

    <ImageView
        android:id="@+id/img_player"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="24dp"
        android:paddingEnd="36dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_previous"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="36sp"
        android:textColor="@color/psg"
        android:layout_margin="8dp"
        android:paddingHorizontal="8dp"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_player"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Lionel Messi" />

    <TextView
        android:id="@+id/tv_player_nationality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:textSize="16sp"
        android:textColor="@color/psg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/tv_player_number"
        app:layout_constraintTop_toTopOf="@id/tv_player_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_player_number"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Argentina" />

    <TextView
        android:id="@+id/tv_player_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:textSize="16sp"
        android:textColor="@color/psg"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_player_number"
        app:layout_constraintEnd_toStartOf="@id/tv_player_number"
        app:layout_constraintBottom_toBottomOf="@id/tv_player_number"
        tools:text="Forward" />

    <TextView
        android:id="@+id/tv_player_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="36sp"
        android:textColor="@color/psg"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_player_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="30" />

    <TextView
        android:id="@+id/tv_player_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="@color/psg"
        android:textSize="16sp"
        android:maxLines="10"
        android:justificationMode="inter_word"
        android:layout_marginTop="24dp"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_player_number"
        tools:text="Messi is a forward who joined PSG from FC Barcelona in 2021. He is a product of the FC Barcelona Academy and made his first-team debut in 2004. It’s hard to find the words to describe a man that the football world knows simply as ‘The GOAT’." />

</androidx.constraintlayout.widget.ConstraintLayout>